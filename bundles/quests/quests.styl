heightCard = 95vh

.colored-field {
  background-color: #a6dff5;
  width: 200px;
  height: 200px;
}

.quest-card {
  display: block;
  height: 90vh;
  margin: 0 10px;
  border-radius: 1px;
  background-color: #fff;

  &__link, &:hover, &__link:hover {
    text-decoration: none;
    color: #000;
  }

  &__right-side {
    height: 100%;
    position: relative;
  }

  &__main-image-container {
    background-color: #064A76;
    height: 90vh;
    padding: 0;
  }

  &__main-image {
    object-fit: cover;
    overflow: hidden;
    //height: 90vh;
    height: 100%;
    width: 100%;
  }

  &__description {
    height: 60%;
    font-size: 1.7rem;
    overflow: hidden;
  }

  &__attributes {
    display: flex;
    position: absolute;
    bottom: 0;
    flex-wrap: wrap;
    &_relative {
      display: flex;
      justify-content: center;
      position: relative;
      width: 100%;
      margin: 10px auto auto;
      font-size: 0.8em;
    }
  }

  &__attribute {
    display: flex;
    border-width: 0;
    background-color: #fff;
    margin: 0 10px;
  }

  &__amount {
    padding: 10px 0;
  }

  &__like-disable {
    display: block;
  }

  &__like-enable {
    display: none;
  }

  &__like {
    border-width: 0;
    background-color: #fff;
    cursor: pointer;
  }

  &__info {
    padding: 10px;
  }
  &__not-found {
    font-size: 1.7em;
    &__picture {
        width: 100%;
        text-align: center;
        &_container {
            margin-top: 10%;
            width: 180px;
            height: 180px;
            display: inline-block;
            background-image: url("/pictures/questsnotfound.png");
            background-size: cover;
        }
    }
  }
}

@media screen and (max-height: 380px) and (min-width: 768px) and (min-device-width: 768px) {
  .quest-card {
    height: 120vh;
    &__description {
      font-size: 1em;
    }

    &__main-image-container {
      height: 100%;
    }

    &__attributes {
      font-size: 0.7em;
    }
  }
}

@media screen and (max-width: 767px) and (max-device-width: 767px) {
  .quest-card {
    height: auto;

    &__main-image-container {
      //height: 60vh;
      height: auto;
    }

    &__main-image {
      //height: 60vh;
      height: 400px;
      width: 100%;
    }

    &__description {
      //height: 60%;
    }

    &__attributes {
      display: flex;
      position: relative;
      justify-content: center;
      margin: 0 -10px;
    }

    &__right-side {
      height: auto;
    }
  }
}

.grayscale {
  filter: grayscale(100%);
}
