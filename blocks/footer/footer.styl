.quest-footer {
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 60px;

  &__space {
    height: 80px;
  }

  &__container {
    padding: 20px;
    height: 60px;
    background-color: #064A76;
  }

  &__pull-right {
    color: #fff;
  }
}

@media screen and (max-width: 767px) and (max-device-width: 767px) {
  .quest-footer {
    &__up {
      display: none;
    }

    &__pull-right {
      color: #fff;
      width: 100%;
      text-align: center;
    }
  }


}