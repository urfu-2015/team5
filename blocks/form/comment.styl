.comments__header {
  width: 100%;
  text-align: center;
}

.comment {
  padding: 10px;
  margin-bottom: 20px;
  background-color: #fff;
  border: 1px solid #eee;

  &_modal {
    margin: 20px;
  }

  &__button-upd,
  &__button-del {
    margin-left: 10px;
    margin-bottom: 10px;
  }

  &__button-sav {
    margin-left: 10px;
    margin-top: 10px;
  }

  &__edit {
    display: none;
  }

  &__content {
    resize: none;
  }

  &__button-add {
    margin-top: 10px;
  }

  &__user {
    color: red;
    font-size: 20px;
  }

  &__date {
      color: grey;
      font-size: 15px;
  }

  &__content {
    margin: 10px;
    padding: 10px;
    border: 1px solid #eee;
    font-size: 1em;
    margin-left: -5px;
  }

  &__content_no-redo {
    margin: 10px;
    padding: 10px;
    border: 1px solid #eee;
    font-size: 1em;
  }

  &-card {
    margin: 0;

    &__textarea {
      margin: 0;
    }
  }

  &__form {
    margin: 0;
  }

}
