.comments__header {
  float: left;
}

.comments {
  clear: both;
}

.comment {
  padding: 10px;
  margin-bottom: 20px;
  box-shadow: 0 0 10px rgba(0,0,0,0.5);

  &__button-upd,
  &__button-del {
    margin-left: 10px;
    margin-bottom: 10px;
  }

  &__button-sav {
    margin-left: 10px;
    margin-top: 10px;
  }

  &__edit {
    display: none;
  }

  &__content {
    resize: none;
  }

  &__button-add {
    margin-top: 10px;
  }

  &__user {
    color: red;
    font-size: 20px;
  }

  &__content {
    font-size: 15px;
  }
}
